<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mainp.MainPage"
             BackgroundColor="#FFF">
    
    <ContentPage.Resources>
        <ResourceDictionary Source="/Resources/Shared/Shared.xaml" />
    </ContentPage.Resources>
    
    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">
            <Border
                HorizontalOptions="Center"
                BackgroundColor="#000">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="15,15,15,15"/>
                </Border.StrokeShape>
                <Label 
                    Padding="20"
                    Text="Hello World"
                    HorizontalOptions="Center"/>
            </Border>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
