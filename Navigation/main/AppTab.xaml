<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       x:Class="main.AppTab"
       xmlns:local="clr-namespace:main"
       xmlns:pages="clr-namespace:main.Pages"
       Shell.FlyoutBehavior="Disabled"
       Shell.NavBarIsVisible="False"
       Shell.TabBarBackgroundColor="#5c5c8a"
       Shell.UnselectedColor="Black"
       Shell.TabBarUnselectedColor="Black"
       Shell.TabBarForegroundColor="White"
       Title="AppTab">
    <TabBar>
        <Tab Title="Home">
            <ShellContent Title="Home" ContentTemplate="{DataTemplate local:MainPage}" />
        </Tab>
        <Tab Title="Second Pages">
            <ShellContent Title="Second" ContentTemplate="{DataTemplate pages:Second}" />
            <ShellContent Title="Second2" ContentTemplate="{DataTemplate pages:Second2}" />
        </Tab>
        <Tab Title="Third">
            <ShellContent Title="Third" ContentTemplate="{DataTemplate local:MainPage}" />
        </Tab>
    </TabBar>
</Shell>